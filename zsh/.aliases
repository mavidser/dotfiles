#Git commands
alias gs="git status"
alias gl="git log --oneline"
alias gls="git log --oneline --stat"
alias gd="git diff"
alias gds="git diff --stat"
function ga() {
  if [ $# -ne 0 ]
    then
    git add $*
  else
    git add -A .;
  fi
}
function gc() {
  git commit -m "$*"
}
function gac() {
  git add -A .;
  git commit -m "$*"
}
function gr() {
  if [ $# -ne 0 ]
    then
    git reset $1
  else
    git reset HEAD~1
  fi
}
function grh() {
  if [ $# -ne 0 ]
    then
    git reset --hard $1
  else
    git reset --hard HEAD~1
  fi
}

alias gphm="git push heroku master"

function gp() {
  if [ $2 ]
    then
    git push $*;
  elif [ $1 ]
    then
    git push origin $1;
  else
    git push;
  fi
}
function gcp() {
  git add -A .;
  git commit -m "$*";
  git push;
}

function retry() {
  echo $*
  until $*; do
    echo Error occured, retrying in 10 seconds...
    sleep 10
  done

}

